@model Sistema_27_03_25.Models.Produto;
@{
    ViewData["Title"] = "Cadastro de Produto";
    <link rel="stylesheet" href="../Views/Shared/PCadastro.cshtml.css" />

    <h1>Cadastro de Produto</h1>

    <form asp-action="Cadastro" method="post">
        <div>
            <label>Nome:</label>
            <input asp-for="Nome" required />
        </div>        
        <div>
            <label>Descrição:</label>
            <input asp-for="Descricao" type="text" required />
        </div>
        <div>
            <label>Preço:</label>
            <input asp-for="Preco" type="text" required />
        </div>
        <button type="submit">Cadastrar Produto</button>
        <p id="obs">(Obs: Caso queira definir o preço como, por exemplo, 5 reais e 50 centavos, 
            digite "005.50", pois, digitando somente "5", o valor será inserido como "500.00")</p>
    </form>
}